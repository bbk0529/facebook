<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user %>
</p>



<%=form_tag create_comment_to_post_path, id:"comment", remote: "true" do%>
  <%=text_field_tag "content" %>
  <%=submit_tag :comment%>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<% @comments.each do |comment| %>
<div id="commentList">
 <%=comment.content %> <br/>
</div>
<% end %>

